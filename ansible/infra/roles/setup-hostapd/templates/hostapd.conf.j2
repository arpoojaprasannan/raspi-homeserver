country_code={{ country_code }}
driver=nl80211
ctrl_interface=/var/run/hostapd
ctrl_interface_group=0
wmm_enabled=1

interface={{ interface }}

### IEEE 802.11n
ieee80211n=1
require_ht=1
ht_capab=[HT40-][HT40+][SHORT-GI-40][MAX-AMSDU-7935][DSSS_CCK-40]

{% if wifi_mode == "2.4GHz" %}
    hw_mode=g
    channel=11
{% endif %}

{% if wifi_mode == "5GHz" %}
    hw_mode=a
    channel=36

    ### IEEE 802.11ac
    ieee80211ac=1
    require_vht=1
    vht_capab=[RX-LDPC][MAX-MPDU-11454][SHORT-GI-80][TX-STBC]
    vht_oper_chwidth=1
    vht_oper_centr_freq_seg0_idx=42
{% endif %}

ignore_broadcast_ssid=0
ssid={{ SSID }}
macaddr_acl=0
auth_algs=1
wpa=2
wpa_passphrase={{ password }}
wpa_key_mgmt=WPA-PSK
wpa_pairwise=TKIP
rsn_pairwise=CCMP